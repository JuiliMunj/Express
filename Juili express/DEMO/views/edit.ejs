<%- include('partials/header', { username: username }) %>

<div class="d-flex justify-content-center mt-5">
  <div class="col-md-6 p-4 bg-white border rounded shadow-sm">
    <h2 class="text-center mb-4">Edit Employee</h2>
    <form method="POST" action="/edit/<%= emp._id %>">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          name="name"
          class="form-control"
          value="<%= emp.name %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          value="<%= emp.email %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input
          type="number"
          name="age"
          class="form-control"
          value="<%= emp.age %>"
          required
          min="18"
          max="100"
        />
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary me-2">Update</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
